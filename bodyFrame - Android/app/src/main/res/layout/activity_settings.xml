<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/left_arrow_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:text="@string/settings"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_payment"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_active"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="Billing" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_inactive"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="Billing History" />

    <Button
        android:id="@+id/button_support"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_active"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="@string/support" />

    <Button
        android:id="@+id/button_faq"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_inactive"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="FAQ" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_active"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="Delete Account" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_inactive"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="@string/logout" />

    <Button
        android:id="@+id/button_invite"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_active"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="Invite a trainer" />
</LinearLayout>