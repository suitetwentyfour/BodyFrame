<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_app_name_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_first_half_capitalized"
            android:fontFamily="@font/app_default"
            android:textColor="@color/text_blue"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView_app_name_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_default"
            android:text="@string/app_name_second_half_capitalized"
            android:textColor="@color/text_white"
            android:paddingTop="100dp"
            android:paddingBottom="15dp"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_goal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:paddingBottom="15dp"
        android:text="@string/goal_details" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_sex"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:text="@string/sex_select" />

        <Spinner
            android:id="@+id/spinner_sex"
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:background="@drawable/spinner_rounded"
            android:alpha="0.60"
            android:entries="@array/sex_dropdown"
            android:theme="@style/Spinner"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView_sex_arrow"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded_right"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:drawableLeft="@drawable/down_arrow_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_goal"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:text="@string/goal_select" />

        <Spinner
            android:id="@+id/spinner_goal"
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:background="@drawable/spinner_rounded"
            android:alpha="0.60"
            android:theme="@style/Spinner"
            android:entries="@array/goal_dropdown"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView_goal_arrow"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded_right"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:drawableLeft="@drawable/down_arrow_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_weight"
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_text_rounded_left"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:hint="@string/weight_select"
            android:textColorHint="@color/text_white"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView_goal_weight"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded_right"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:text="lbs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_height"
            android:layout_width="240dp"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_text_rounded_left"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:hint="@string/height_select"
            android:textColorHint="@color/text_white"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView_goal_height"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/text_view_rounded_right"
            android:alpha="0.60"
            android:textColor="@color/text_white"
            android:text="inches" />
    </LinearLayout>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_active"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="@string/continue_button" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_inactive"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_white"
        android:text="@string/back_button" />

    <TextView
        android:id="@+id/textView_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:text="@string/already_have_account" />
</LinearLayout>